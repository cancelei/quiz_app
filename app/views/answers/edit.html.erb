<h1 class="text-3xl font-bold"><%= action_name.capitalize %> Answer</h1>

<%= form_with model: [@question, @answer], local: true do |form| %>
  <div class="mb-4">
    <%= form.label :content, class: "block text-gray-700" %>
    <%= form.text_field :content, class: "w-full border border-gray-300 rounded-md p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :correct, "Correct Answer", class: "block text-gray-700" %>
    <%= form.check_box :correct %>
  </div>

  <%= form.submit "#{action_name.capitalize} Answer", class: "bg-blue-500 text-white px-4 py-2 rounded-md" %>
<% end %>
