<div class="bg-white rounded-lg shadow-lg p-6">
  <h2 class="text-2xl font-bold mb-6">Quiz Results</h2>
  
  <%= render "results/summary", quiz_attempt: @quiz_attempt %>
  
  <div class="mt-8 space-y-6">
    <% @quiz_attempt.quiz.questions.each_with_index do |question, index| %>
      <%= render "results/question_result",
          question: question,
          user_answers: @quiz_attempt.user_answers,
          question_number: index + 1 %>
    <% end %>
  </div>

  <div class="mt-8 flex justify-between">
    <%= link_to "Back to Quizzes", 
        quizzes_path,
        class: "text-blue-500 hover:text-blue-700" %>
    
    <%= button_to "Retake Quiz", 
        quiz_user_quiz_attempts_path(@quiz_attempt.quiz), 
        method: :post,
        class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>
</div> 