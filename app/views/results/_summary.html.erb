<div class="bg-gray-50 rounded-lg p-4">
  <div class="grid grid-cols-2 gap-4">
    <div>
      <p class="text-gray-600">Final Score</p>
      <p class="text-3xl font-bold <%= score_color(quiz_attempt.score) %>">
        <%= number_to_percentage(quiz_attempt.score, precision: 1) %>
      </p>
    </div>
    <div>
      <p class="text-gray-600">Completion Time</p>
      <p class="text-lg">
        <%= time_ago_in_words(quiz_attempt.completed_at) %> ago
      </p>
    </div>
  </div>
</div> 